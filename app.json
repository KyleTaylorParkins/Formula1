{
  "id": "com.athom.formula1",
  "version": "1.0.2",
  "compatibility": ">=2.4.0",
  "sdk": 2,
  "name": {
    "en": "Formula 1",
    "nl": "Formule 1"
  },
  "brandcolor": "#FF0100",
  "tags": {
        "en": ["Formula one", "F1", "Racing"],
        "nl": ["Formule 1", "F1", "Race"]
    },
  "description": {
    "en": "This app lets you integrate the current Formula 1 schedule in Homey!",
    "nl": "Deze app maakt het mogelijk om het Formule 1 seizoensschema te integreren in Homey!"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bram van Rooijen",
    "email": "bram@athom.nl"
  },
  "contributors": {
    "developers": [
      {
        "name": "Kyle Taylor Parkins",
        "email": "kyle@athom.nl"
      }
    ]
  },
  "flow": {
     "triggers": [
      {
        "id": "race_start",
        "title": {
          "en": "The next race starts",
          "nl": "De volgende race begint"
        },
        "tokens": [
          {
            "name": "race_name",
            "type": "string",
            "title": {
              "en": "Racename",
              "nl": "Racenaam"
            },
            "example": "Monaco"
        },
        {
          "name": "circuit",
          "type": "string",
          "title": {
            "en": "Circuit",
            "nl": "Circuit"
          },
          "example": "Monza"
        }
      ]
    },
    {
        "id": "race_in",
        "title": {
          "en": "The race is going to start in...",
          "nl": "De race gaat beginnen in..."
        },
        "args": [
          {
            "name": "time_before",
            "type": "dropdown",
            "values": [
              {
                "id": "5",
                "label": {
                  "en": "5 minutes",
                  "nl": "5 minuten"
                }
              },
              {
                "id": "10",
                "label": {
                  "en": "10 minutes",
                  "nl": "10 minuten"
                }
              },
              {
                "id": "30",
                "label": {
                  "en": "30 minutes",
                  "nl": "30 minuten"
                }
              },
              {
                "id": "60",
                "label": {
                  "en": "1 hour",
                  "nl": "1 hour"
                }
              }
            ],
            "tokens": [
              {
                "name": "race_name",
                "type": "string",
                "title": {
                  "en": "Racename",
                  "nl": "Racenaam"
                },
                "example": "Monaco"
            },
            {
              "name": "circuit",
              "type": "string",
              "title": {
                "en": "Circuit",
                "nl": "Circuit"
              },
              "example": "Monza"
            }
          ]
          }
        ]
        },
        {
          "id": "winner",
          "title": {
            "en": "The race is won by",
            "nl": "De race is gewonnen door"
          },
          "tokens": [
            {
              "name": "driver_name",
              "type": "string",
              "title": {
                "en": "Driver",
                "nl": "Coureur"
              },
              "example": "Max Verstappen"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_racing",
        "title": {
          "en": "Race is ongoing",
          "nl": "Race is gaande"
        }
      }
    ]
  }
}